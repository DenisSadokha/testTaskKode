<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/imageStatusWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sunny" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/tvMainInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageStatusWeather"
                android:layout_toEndOf="@+id/imageStatusWeather"
                android:layout_marginStart="30dp"
                android:text="277.3 째F in Kemerovo"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMainInfo"
                android:layout_alignStart="@+id/tvMainInfo"
                android:layout_marginTop="10dp"
                android:id="@+id/tvFeelsLike"
                android:text="Feels like 255.1 째F" />

            <TextView
                android:id="@+id/tvWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageStatusWeather"
                android:layout_alignStart="@+id/imageStatusWeather"
                android:layout_alignEnd="@+id/imageStatusWeather"
                android:textAlignment="center"
                android:text="Snow" />

            <TextView
                android:id="@+id/tvMaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvMainInfo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="Max 266.12 째F" />

            <TextView
                android:id="@+id/tvMinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvMaxTemp"
                android:layout_alignTop="@+id/tvFeelsLike"
                android:text="Min 266.12 째F" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>